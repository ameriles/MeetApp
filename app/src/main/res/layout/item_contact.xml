<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contact_iv_profile_image"
        android:layout_width="@dimen/item_picture_size"
        android:layout_height="@dimen/item_picture_size"
        android:layout_margin="@dimen/item_margin"
        android:background="@color/primary"
        android:contentDescription="@string/contact_profile_picture" />

    <TextView
        android:id="@+id/contact_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_iv_profile_image"
        android:layout_toRightOf="@+id/contact_iv_profile_image"
        android:textSize="@dimen/item_title_size"
        android:textColor="@color/primary_dark"
        android:layout_margin="@dimen/item_margin"
        android:text="A Contact Name" />

    <TextView
        android:id="@+id/contact_tv_last_meeting"
        android:layout_below="@+id/contact_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_iv_profile_image"
        android:layout_toRightOf="@+id/contact_iv_profile_image"
        android:layout_margin="@dimen/item_margin"
        android:text="Last meeting 15:45"/>

</RelativeLayout>